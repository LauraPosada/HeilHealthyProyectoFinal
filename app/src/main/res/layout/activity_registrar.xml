<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.tecnosystem.heilhealthy.Registrar"
    android:orientation="vertical"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1">

            <TextView
                style="@style/texta"
                android:id="@+id/tvNombrePa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre"
                android:textColor="@android:color/background_dark"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etNombrePacienteRegistro"
                style="@style/texta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName" />

            <TextView
                style="@style/texta"
                android:id="@+id/tvApellidoRegistro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Apellido"
                android:textColor="@android:color/background_dark"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                style="@style/texta"
                android:id="@+id/etApellidoRegistro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName" />

            <TextView
                style="@style/texta"
                android:id="@+id/tvIdentificacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Identificacion"
                android:textColor="@android:color/background_dark"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                style="@style/texta"
                android:id="@+id/etIdentificacionRegistro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName" />

            <TextView
                style="@style/texta"
                android:id="@+id/tvEmailRegistro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textColor="@android:color/background_dark"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                style="@style/texta"
                android:id="@+id/etEmailRegistro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName" />

            <TextView
                style="@style/texta"
                android:id="@+id/tvFechaNacRegistro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fecha Nacimiento"
                android:textColor="@android:color/background_dark"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                style="@style/texta"
                android:id="@+id/etFechaNacRegistro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName" />

            <TextView
                style="@style/texta"
                android:id="@+id/tvIngresosRegistro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ingresos"
                android:textColor="@android:color/background_dark"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                style="@style/texta"
                android:id="@+id/etIngresosRegistro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName" />

            <TextView
                style="@style/texta"
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Eps"
                android:textColor="@android:color/background_dark"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Spinner

                android:id="@+id/spinnerEps"
                style="@style/Combo"
                android:layout_width="250dp"
                android:layout_height="30dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="0.31"
                />

            <TextView
                style="@style/texta"
                android:id="@+id/tvGeneroRegistro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Genero"
                android:textColor="@android:color/background_dark"
                android:textSize="18sp"
                android:textStyle="bold"
               />

            <Spinner
                style="@style/Combo"
                android:id="@+id/spGeneroRegistro"
                android:layout_width="250dp"
                android:layout_height="30dp"
                android:layout_marginBottom="10dp" />

            <TextView
                android:id="@+id/textView7"
                style="@style/texta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ciudad"
                android:textColor="@android:color/background_dark"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Spinner
                style="@style/Combo"
                android:id="@+id/spCiudadRegistro"
                android:layout_width="250dp"
                android:layout_height="30dp"
                android:layout_marginBottom="10dp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="30dp" />

            <Button
                android:id="@+id/bynRegistrarCita"
                android:layout_width="156dp"
                android:layout_height="wrap_content"
                android:text="REGISTRAR" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="65dp" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <EditText
                        android:id="@+id/editText6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="textPersonName" />

                    <Button
                        android:id="@+id/btnBuscarCita"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="BUSCAR" />

                    <Button
                        android:id="@+id/btnEditarCita"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="EDITAR" />

                </TableRow>

            </TableLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="42dp" />

        </LinearLayout>
    </ScrollView>


</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.tecnosystem.heilhealthy.Ingresar"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1"
            tools:context="com.example.tecnosystem.proyectofinalhospital.Ingresar">

            <Spinner
                style="@style/Combo"
                android:id="@+id/spSede"
                android:layout_width="match_parent"
                android:layout_height="39dp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="22dp" />

            <Spinner
                style="@style/Combo"
                android:id="@+id/spEspecialista"
                android:layout_width="match_parent"
                android:layout_height="39dp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="26dp" />

            <Spinner
                style="@style/Combo"
                android:id="@+id/spHorario"
                android:layout_width="match_parent"
                android:layout_height="39dp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="28dp" />

            <Button
                android:id="@+id/bntPrioritaria"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="prioritaria"
                android:text="PRIORITARIA" />

            <Button
                android:id="@+id/btnGeneral"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="general"
                android:text="GENERAL" />

            <Button
                android:id="@+id/btnEspecialista"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="especialista"
                android:text="ESPECIALISTA" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="28dp" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Otras opciones acerca de la cita"
                android:textColor="@android:color/background_dark"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.12">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="          " />

                <Button
                    android:id="@+id/btnBuscarCita"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BUSCAR" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="                            " />

                <Button
                    android:id="@+id/btnEditarCita"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="EDITAR" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="                         " />

            </TableRow>

        </LinearLayout>
    </ScrollView>


</LinearLayout>

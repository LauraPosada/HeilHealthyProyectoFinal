<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.tecnosystem.heilhealthy.SolicitarCita"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView

                android:id="@+id/editText2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:text="TextView"
                android:textAlignment="center"
                android:textColor="@android:color/background_dark"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:enabled="false" />



            <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.14" />

            <TextView
                style="@style/textos"
                android:id="@+id/tvIdPaciente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Identificacion"
                />

            <EditText
                android:id="@+id/etIdPaciente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/tvMedico"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Medico"
                style="@style/textos"/>

            <EditText
                android:id="@+id/etMedicoCap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/tvHoraCap"
                style="@style/textos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hora" />

            <EditText
                android:id="@+id/etHoraCap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/tvEstadoCita"
                style="@style/textos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Estado Cita" />

            <EditText
                android:id="@+id/etEstadoCita"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/tvValorConsulta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Valor Consulta"
                style="@style/textos" />

            <EditText
                android:id="@+id/etValor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/tvDescripcion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Descripcion"
                style="@style/textos" />

            <EditText
                android:id="@+id/etDescripcion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/tvTipoCita"
                style="@style/textos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tipo Cita" />

            <Spinner
                android:id="@+id/spTipoCita"
                style="@style/Combo"
                android:layout_width="match_parent"
                android:layout_height="39dp" />

            <TextView
                android:id="@+id/tvDisponibilidad"
                style="@style/textos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Disponibilidad" />

            <Spinner
                android:id="@+id/spDisponibilidad"
                style="@style/Combo"
                android:layout_width="match_parent"
                android:layout_height="39dp" />

            <Button
                android:id="@+id/bynRegistrarCita"
                android:layout_width="156dp"
                android:layout_height="wrap_content"
                android:text="REGISTRAR" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="65dp" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </TableLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="42dp" />

        </LinearLayout>
    </ScrollView>


</LinearLayout>
